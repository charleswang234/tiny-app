<!-- Page that displays the URLS -->

<!DOCTYPE html>
<html lang="en">

<%- include partials/_head.ejs%>
<body>
  <div class="container-fluid">
    <%- include partials/_header.ejs %>
    <%if (user === undefined) {%>
    <p>Please login or register to add, edit, and delete URLS</p>
    <%} else {%>
    <table class="table">
      <% for (shortened in urls) { %>
      <tr class="well">
        <td><%= urls[shortened].longLink%> &rarr; <%= shortened %> </td>
        <td>
          <!-- Allows you to exit the long url -->
          <form method="GET" action="/urls/<%= shortened %>">
            <input type="submit" value="Edit" class="btn btn-info">
          </form>
        </td>
        <td>
          <!-- Allows you to delete the URL -->
          <form method="POST" action="/urls/<%= shortened %>/delete">
            <input type="submit" value="DELETE" class="btn btn-danger">
          </form>
        </td>
      </tr>
      <% }; %>
    </table>
    <!-- Adding a new url -->
    <a href="/urls/new" class="btn btn-primary">New URL</a>
    <% } %>
  </div>
</body>

</html>
